#!/usr/bin/env node

'use strict';

// mri git [feature|hotfix|hotfix] [start|finish] branchName

const _program = require('commander');
const $root = require('../service/root');
const $_gitRelease = require('../process/git-release');

const helper = () => {
    console.log('\n', 'THEMES');
    $root.getThemes();
    console.log('\n');
};

/**
 * ----------------
 * 主程序
 * ----------------
 */
_program
    .usage('hotfix <theme>')
    .option('--force', '强力开启')
    .option('--start', '创建hotfix')
    .option('--ver [version]', '当前版本号')
    .on('--help', helper)
    .parse(process.argv);

$_gitRelease('hotfix');



