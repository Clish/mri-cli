#!/usr/bin/env node

'use strict';

const _program = require('commander');

const $run = require('../lib/common/run');
const $log = require('../lib/common/log');
const $git = require('../lib/common/git');
const $$turning = require('../lib/services/tuning/tuning')

_program
    .usage('[options]')
    .description('调整调试文件')
    .option('--ignore', '忽略文件')
    .parse(process.argv);

let { ignore } = _program;

$run.root(() => {
    if(ignore) {
        $$turning.rmcache();
    } 
});

