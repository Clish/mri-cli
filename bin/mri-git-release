#!/usr/bin/env node

'use strict';

const _program = require('commander');

const $_gitRelease = require('../process/git-release');
const $root = require('../service/root');

const helper = () => {
    console.log('\n', 'THEMES');
    $root.getThemes();
};

/**
 * ----------------
 * 主程序
 * ----------------
 */
_program
    .usage('release <theme::version> [options]')
    .option('--force', '强力开启')
    .on('--help', helper)
    .parse(process.argv);

$_gitRelease('release', helper);







