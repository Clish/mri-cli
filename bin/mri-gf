};

/**
 * ----------------
 * 主程序
 * ----------------
 */

_program
    .usage('gf <theme> [options]')
    .option('--force', '强力开启')
    .option('--start', '创建release')
    .option('--ver [version]', '当前版本号')
    .on('--help', helper)
    .parse(process.argv);

