#!/usr/bin/env node

'use strict';

const _program = require('commander');
const _shell = require('shelljs');
const _ = require('lodash');
const _chalk = require('chalk');

const $git = require('../service/git');
const $root = require('../service/root');

const $_gitFeature = require('../process/git-feature');

const helper = () => {
    console.log('\n', 'THEMES');
    $root.getThemes();
    console.log('\n');
};

/**
 * ----------------
 * 主程序
 * ----------------
 */

_program
    .usage('feature [name::version]')
    .option('--start', '创建feature')
    .option('--force', '强力模式，无需在release下创建feature')
    .option('--remote', '是否推送到远程')
    .on('--help', helper)
    .parse(process.argv);

console.log(`该功能已废弃`);